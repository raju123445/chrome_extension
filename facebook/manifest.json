{
    "manifest_version": 3,
    "name": "Facebook Comment Scraper",
    "version": "1.0",
    "description": "Scrapes and displays Facebook comments in a popup",
    "permissions": ["activeTab", "scripting", "storage"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://*.facebook.com/*"],
        "js": ["contentScript.js"]
      }
    ]
  }